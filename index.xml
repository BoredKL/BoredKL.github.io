&lt;div style=&#34;position: relative; padding: 30% 45%;&#34;&gt;
&lt;iframe 
  src=&#34;//player.bilibili.com/player.html?bvid=BV1Nm4y1J7Gu&amp;page=1&#34;  scrolling=&#34;no&#34;  style=&#34;position: absolute; width: 80%; height: 80%; left: 0; top: 0;&#34; frameborder=&#34;no&#34; allowfullscreen&gt;
